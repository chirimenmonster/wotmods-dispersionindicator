<root>
    <default>
        <textColor>0xFFFF00</textColor>
        <lineHeight>16</lineHeight>
        <statsWidth>56</statsWidth>
        <alpha>0.8</alpha>
    </default>
    <view>
        <panel>
            <id>panel_0</id>
            <style>
                <align>CROSSHAIR</align>
                <referncePoint>LEFT_CENTER</referncePoint>
                <offset>120, 1</offset>
                <statsWidth>40</statsWidth>
                <fontSize>16</fontSize>
                <textColor>0xFFFF00</textColor>
                <textFilter>DROPSHADOW</textFilter>
                <alpha>0.8</alpha>
            </style>
            <statsDefs>
                <status>
                    <id>aimingTimeConverging</id>
                    <refer>aimingTimeConverging</refer>
                    <label></label>
                    <format>{:.2f}</format>
                    <factor>1.0</factor>
                    <unit></unit>
                </status>
            </statsDefs>
            <display>
                <item>aimingTimeConverging</item>
            </display>
        </panel>
        <panel>
            <id>panel_1</id>
            <style>
                <align>SCREEN_LEFT_BOTTOM</align>
                <referncePoint>LEFT_BOTTOM</referncePoint>
                <offset>320, -100</offset>
                <backgroundColor>0x000000</backgroundColor>
                <backgroundAlpha>0.4</backgroundAlpha>
            </style>
            <display>
                <item>scoreDispersion</item>
                <item>aimingTimeConverging</item>
                <item>modifiedAimingFactor</item>
                <item>aimingFactor</item>
                <item>dAngleAiming</item>
                <item>dAngleIdeal</item>
                <item>shotDispersionAngle</item>
                <item>currTime</item>
                <item>aimingStartTime</item>
                <item>aimingStartFactor</item>
                <item>aimingTime</item>
                <item>additiveFactor</item>
                <item>multFactor</item>
                <item>factorsMovement</item>
                <item>factorsRotation</item>
                <item>factorsTurretRotation</item>
                <item>shotFactor</item>
            </display>
        </panel>
        <panel>
            <id>panel_2</id>
            <style>
                <align>SCREEN_RIGHT_BOTTOM</align>
                <referncePoint>RIGHT_BOTTOM</referncePoint>
                <offset>-320, -100</offset>
                <backgroundColor>0x000000</backgroundColor>
                <backgroundAlpha>0.4</backgroundAlpha>
            </style>
            <display>
                <item>vehicleSpeed</item>
                <item>vehicleRSpeed</item>
                <item>engineRPM</item>
                <item>engineRelativeRPM</item>
                <item>turretRotationSpeed</item>
            </display>
        </panel>
    </view>
</root>
